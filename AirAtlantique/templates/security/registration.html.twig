{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inscription</h1>

    {{ form_start(form) }}
    {{ form_row(form.UserName, {'label': 'Nom','attr':{'placeholder':'Saisissez votre nom ...'}})}}
    {{ form_row(form.FirstName, {'label': 'Prénom','attr':{'placeholder':'Saisissez votre prénom ...'}})}}
    {{ form_row(form.Mail, {'label': 'Adresse Mail','attr':{'placeholder':'Saisissez votre mail ...'}}) }}
